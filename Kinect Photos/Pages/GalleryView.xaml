<Page x:Class="Kinect_Photos.GalleryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:k="http://schemas.microsoft.com/kinect/2013"
      xmlns:local="clr-namespace:Kinect_Photos"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="GalleryView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Photo grid -->
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
        </Grid.ColumnDefinitions>


        <!-- Top Bar -->
        <DockPanel Background="#EEEEEE" VerticalAlignment="Center" LastChildFill="True" Margin="10,0,5,0" Height="50">
            <TextBlock Text="Photos" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,5,0" />
            <k:KinectTileButton Height="50" Margin="0" Label="Albums" FontSize="20" VerticalAlignment="Center" HorizontalLabelAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Background="#FF7931FF"/>
            <k:KinectTileButton Height="50" Margin="0" Label="Memories" FontSize="20" VerticalAlignment="Center" HorizontalLabelAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Background="#FF7931FF"/>
        </DockPanel>

        <!-- Photo Grid -->
        <k:KinectScrollViewer Grid.Row="1" Grid.Column="0" Margin="0" VerticalScrollBarVisibility="Hidden">
            <ItemsControl x:Name="imageContainer">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="160" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

            </ItemsControl>
        </k:KinectScrollViewer>

        <!-- Sidebar -->
        <StackPanel Grid.Column="1" Margin="10,-8,10,10" Grid.RowSpan="2">
            <!--Kinect Sensor-->
            
            <!--Search Bar-->
            <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                <TextBox Height="30" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" FontStyle="Italic">Search...</TextBox>
            </Border>

            <Separator Margin="0,10"/>

            <!--Settings Buttons-->
            <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                <k:KinectCircleButton x:Name="SettingsBtn" Height="25" Label="Settings" VerticalAlignment="Center" LabelPosition="Right" Width="220" FontSize="35791" Margin="0,5,0,5"/>
            </Border>
            <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                <k:KinectCircleButton x:Name="ChangeUserBtn" Height="25" Label="Change User" VerticalAlignment="Center" LabelPosition="Right" Width="220" FontSize="35791" Margin="0,5,0,5"/>
            </Border>
        </StackPanel>

    </Grid>
</Page>

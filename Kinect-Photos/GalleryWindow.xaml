<Window x:Class="Kinect_Photos.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_Photos"
        mc:Ignorable="d"
        Title="Photos" Height="450" Width="800" Background="White">
    <k:KinectRegion>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Photo grid -->
                <ColumnDefinition Width="250"/>
                <!-- Sidebar -->
            </Grid.ColumnDefinitions>


            <!-- Top Bar -->
            <DockPanel Background="#EEEEEE" VerticalAlignment="Center" LastChildFill="True" Margin="10,0,5,0" Height="50">
                <TextBlock Text="Photos" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,5,0" />
                <k:KinectTileButton Height="50" Margin="0" Label="Albums" FontSize="20" VerticalAlignment="Center" HorizontalLabelAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Background="#FF7931FF"/>
                <k:KinectTileButton Height="50" Margin="0" Label="Memories" FontSize="20" VerticalAlignment="Center" HorizontalLabelAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Background="#FF7931FF"/>
                <!--
                <DockPanel DockPanel.Dock="Right" Width="NaN" Height="50" LastChildFill="False" HorizontalAlignment="Left" Margin="15,0,0,0">
                    <k:KinectTileButton Height="50" Margin="0" Label="Albums" FontSize="20" VerticalAlignment="Center" HorizontalLabelAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" Background="#FF7931FF"/>
                    

                </DockPanel>
                -->
            </DockPanel>

            <!-- Photo Grid -->
            <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5" VerticalScrollBarVisibility="Auto">
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="100" ItemHeight="105" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!--Placeholder Buttons for Photos-->
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>


                </ItemsControl>
            </ScrollViewer>

            <!-- Sidebar -->
            <StackPanel Grid.Column="1" Margin="10,-8,10,10" Grid.RowSpan="2">

                <!--<local:KinectHoverButton Grid.Column="0" Style="{StaticResource KinectHoverButtonScrollLeftStyle}" Click="PageLeftButtonClick" IsEnabled="{Binding ElementName=ControlsBasicsWindow, Path=PageLeftEnabled}"/> <local:KinectHoverButton Grid.Column="0" Style="{StaticResource KinectHoverButtonScrollLeftStyle}" Click="PageLeftButtonClick" IsEnabled="{Binding ElementName=ControlsBasicsWindow, Path=PageLeftEnabled}"/> -->
                <Border BorderThickness="1" Padding="25" BorderBrush="#FF989898" CornerRadius="3" Margin="0,10,0,0"/>
                <!--Kinect Sensor-->
                <Grid Grid.Row="0"  Margin="0 5 0 0">
                    <k:KinectUserViewer k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" ImageBackground="#FFD7D7D7" Width="NaN" />
                    <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
                </Grid>
                <!--Search Bar-->
                <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                    <TextBox Height="30" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" FontStyle="Italic">Search...</TextBox>
                </Border>

                <Separator Margin="0,10"/>
                
                <!--Settings Buttons-->
                <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 0 0 0">
                    <k:KinectCircleButton Height="25" Label="Memories" VerticalAlignment="Center" LabelPosition="Right" Width="220" FontSize="35791" Margin="0,5,0,5"/>
                </Border>
                <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                    <k:KinectCircleButton Height="25" Label="Settings" VerticalAlignment="Center" LabelPosition="Right" Width="220" FontSize="35791" Margin="0,5,0,5"/>
                </Border>
                <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8" Margin="0 10 0 0">
                    <k:KinectCircleButton Height="25" Label="Change User" VerticalAlignment="Center" LabelPosition="Right" Width="220" FontSize="35791" Margin="0,5,0,5"/>
                </Border>

                <!--
                <k:KinectTileButton Margin="0,5" Label="Memories"/>
                <k:KinectTileButton Height="40" Margin="0,5" Label="Settings"/>
                <k:KinectTileButton Height="40" Margin="0,5" Label="Change User"/>
                -->
                <Border BorderThickness="1" Padding="25" BorderBrush="#FF989898" CornerRadius="3" Margin="0,10,0,0"/>
            </StackPanel>

        </Grid>
    </k:KinectRegion>
</Window>

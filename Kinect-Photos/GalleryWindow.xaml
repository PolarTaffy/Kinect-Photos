<Window x:Class="Kinect_Photos.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_Photos"
        mc:Ignorable="d"
        Title="Photos" Height="450" Width="800" Background="White">
    <k:KinectRegion>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top bar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Photo grid -->
                <ColumnDefinition Width="250"/>
                <!-- Sidebar -->
            </Grid.ColumnDefinitions>


            <!-- Top Bar -->
            <DockPanel Background="#EEEEEE" VerticalAlignment="Center" LastChildFill="True" Margin="10,0,10,0">
                <TextBlock Text="Photos" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" />
                <DockPanel DockPanel.Dock="Right" Width="NaN" Height="32" LastChildFill="False" HorizontalAlignment="Right">
                    <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="8">
                        <TextBox Width="423" Height="NaN" BorderBrush="{x:Null}" Background="{x:Null}" />
                    </Border>

                </DockPanel>
            </DockPanel>

            <!-- Photo Grid -->
            <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5" VerticalScrollBarVisibility="Auto">
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="100" ItemHeight="105" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!--Placeholder Buttons for Photos-->
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>
                    <k:KinectTileButton></k:KinectTileButton>


                </ItemsControl>
            </ScrollViewer>

            <!-- Sidebar -->
            <StackPanel Grid.Column="1" Margin="10,0,10,10" Grid.RowSpan="2">

                <Grid Grid.Row="0"  Margin="0">
                    <k:KinectUserViewer k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" ImageBackground="#FFD7D7D7" Width="NaN" />
                    <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
                </Grid>


                <TextBlock Text="Albums" FontWeight="Bold" FontSize="18" Margin="0,10,0,0"/>
                <k:KinectTileButton Height="30" Margin="0" Label="Vacation 2024" FontSize="12" VerticalAlignment="Center" HorizontalLabelAlignment="Center"/>
                <k:KinectTileButton Height="40" Margin="0" Label="Hackathon Dump"/>
                <k:KinectTileButton Height="40" Margin="0" Label="Danae Graduation"/>

                <Separator Margin="0,10"/>

                <k:KinectTileButton Height="40" Margin="0,5" Label="Memories"/>
                <k:KinectTileButton Height="40" Margin="0,5" Label="Settings"/>
                <k:KinectTileButton Height="40" Margin="0,5" Label="Change User"/>
            </StackPanel>

        </Grid>
    </k:KinectRegion>
</Window>

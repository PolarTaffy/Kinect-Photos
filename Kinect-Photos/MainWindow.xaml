<Window x:Class="Kinect_Photos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_Photos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid Grid.Row="0"  Margin="10 0 10 20">
            <!-- <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Images\Logo.png" Stretch="None" Margin="0 0 0 4"/> -->
            <k:KinectUserViewer k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        </Grid>

        <k:KinectRegion Grid.Row="1" x:Name="kinectRegion">
            <Grid x:Name="kinectRegionGrid" Margin="10,20,10,20">
                <Label Content="Welcome to Kinect Photos." HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
                <Label Content="Select a profile." HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" FontSize="20"/>

                <!--Managing Profile Images-->
                <Grid HorizontalAlignment="Center" Margin="0,105,0,39" Height="250">
                    <k:KinectTileButton VerticalAlignment="Top"></k:KinectTileButton>
                    <Label VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="16">Profile 1</Label>
                </Grid>


            </Grid>
        </k:KinectRegion>
    </Grid>
</Window>
